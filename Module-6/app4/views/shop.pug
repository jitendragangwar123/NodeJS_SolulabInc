extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet",href="/css/product.css")

block content 
    main 
        if prods.length>0
                .grid 
                    each product in prods 
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title} 
                            div.card__image 
                                img(src="https://static.scientificamerican.com/sciam/cache/file/1DDFE633-2B85-468D-B28D05ADAE7D1AD8_source.jpg?w=590&h=800&D80F3D79-4382-49FA-BE4B4D0C62A5C3ED" alt="Book Image")
                            div.card__content 
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting things.
                            div.card__actions 
                                button.btn Add to Cart     
        else 
            h1 No Products    

